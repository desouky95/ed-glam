{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "sourceMap": true,
    "target": "ESNext",
    "outDir": "lib",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "noErrorTruncation": false,
    "paths": {
      "@eduact/student-theme" :  ["packages/ed-student-theme/src"],
      "@eduact/student-theme/*": ["./packages/ed-student-theme/src/*"],
      "@eduact/ed-system": ["./packages/ed-system/src"],
      "@eduact/ed-system/*": ["./packages/ed-system/src/*"],
      "@ed-glam/admin-theme": ["./packages/ed-admin-theme/src"],
      "@ed-glam/admin-theme/*": ["./packages/ed-admin-theme/src/*"],
      "@eduact/ed-components": ["./packages/ed-components/src"],
      "@eduact/ed-components/*": ["./packages/ed-components/src/*"],
      "@eduact/utils": ["./packages/utils/src"],
      "@eduact/utils/*": ["./packages/utils/src/*"],
      "scripts/*" : ["./scripts/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "*/build",
    "**/node_modules",
    "",
    "test",
    "packages/**/build"
  ]
}
