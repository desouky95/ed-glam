{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "lib": ["ES2015", "DOM"],
    "sourceMap": true,
    "target": "ESNext",
    "outDir": "lib",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    // "baseUrl": "./",
    "noErrorTruncation": false,
    "paths": {
      "@/*": ["./src/*"],
      "@configs/*": ["./configs/*"],
      "@ed-glam/admin-theme": ["./packages/ed-admin-theme/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "*/build",
    "**/node_modules",
    "",
    "test",
    "packages/**/build"
  ]
}
