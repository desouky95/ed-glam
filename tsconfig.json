{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "lib": ["ES2015", "DOM"],
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "noErrorTruncation": false,
    "paths": {
      "@/*": ["./src/*"],
      "@configs/*": ["./configs/*"],
      "@ed-glam/admin-theme": ["./packages/ed-admin-theme/src/*"]
    },
    "types": ["node", "react"]
  },
  "files": ["src/index.ts"],
  "exclude": ["**/.*/", "*/build", "**/node_modules", "node_modules", ""],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
