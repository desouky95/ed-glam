{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"rootDir": "./src",
		"composite": true,
		"outDir": "./build",
		"incremental": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts*"],
	"exclude": [
		"src/**/*.d.ts",
		"src/**/*.test.*",
		"./**/*.spec.*",
		"**/test-utils.tsx"
	],
	"references": [
		{
			"path": "../ed-system/tsconfig.build.json"
		}
	]
}
