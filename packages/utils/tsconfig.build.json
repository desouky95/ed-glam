{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "declaration": true,
      "composite": true,
      "rootDir": "./src",
      "outDir": "./build",
      "emitDeclarationOnly": true,
      "incremental": true
    },
    "include": ["src/**/*.ts*"],
    "exclude": [
      "src/**/*.d.ts",
      "src/**/*.test.*",
      "./**/*.spec.*",
      "**/test-utils.tsx"
    ]
  }
  